{% if ntfc_list|length %}
<?xml version='1.0' encoding='utf-8'?>
<notifications>
	{% for notification in ntfc_list %}<notification date="{{ notification.date|date:"U" }}" link="{{ notification.url }}">
    {% if notification.follower %}{{ notification.follower.userprofile.username }} folgt dir jetzt!
    {% elif notification.message and not notification.comment %}{{ notification.message.user.username }} hat Dich in seiner Nachricht erw√§hnt!
    {% elif notification.group %}{{ notification.group.short|upper }}: {{ notification.note|safe }}
		{% else %}{{ notification.note|safe }}{% endif %}
    </notification>{% endfor %}
</notifications>
{% endif %}